---
layout: base-water.njk
---

<article class="post">
    <header class="post-header">
        <h1 class="post-title">{{ title }}</h1>
        {% if subtitle %}
        <h2 class="post-subtitle">{{ subtitle }}</h2>
        {% endif %}
        <div class="post-meta">
            <time datetime="{{ date | dateISO }}">{{ date | dateDisplay }}</time>
            {% if author %} by {{ author }}{% endif %}
            {% if categories %}
            <span class="post-categories">in {{ categories }}</span>
            {% endif %}
        </div>
    </header>
    
    <div class="post-content">
        {{ content | safe }}
    </div>
    
    <footer class="post-footer">
        <div class="post-navigation">
            <a href="/" class="back-to-home">‚Üê Back to Posts</a>
        </div>
    </footer>
</article>

